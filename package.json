{
  "name": "inj.ms",
  "description": "Website for inj.ms",
  "version": "2.0.0",
  "author": "Ian James, https://inj.ms/github",
  "directories": {
    "test": "__spec__"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^9.8.6",
    "clean-css": "^4.2.3",
    "cssnano": "^4.1.10",
    "eleventy-plugin-i18n": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "html-minifier": "^4.0.0",
    "markdown-it": "^12.0.2",
    "prettier": "^2.1.2",
    "sass": "^1.27.0"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run compile:sass && npm run build:site",
    "build:site": "eleventy",
    "compile:sass": "gulp compile",
    "lint": "npm run lint:javascript && npm run lint:sass",
    "lint:javascript": "eslint --config='.eslintrc.yaml' '**/*.js'",
    "lint:sass": "stylelint '**/*.scss' --cache=true",
    "netlify": "npm run build",
    "start": "eleventy --serve",
    "test": "npm run test:javascript",
    "test:javascript": "mocha '__spec__/**/*.spec.js'",
    "watch:sass": "gulp",
    "watch:site": "eleventy --serve"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "mocha": "^8.2.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0"
  }
}
